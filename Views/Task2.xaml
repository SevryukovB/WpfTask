        xmlns:vm="clr-namespace:WpfTask.ViewModels"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfTask.Views"
        xmlns:viewModels="clr-namespace:WpfTask.ViewModels"
        mc:Ignorable="d"
        Title="Task2" Height="300" Width="300"
        DataContext="{DynamicResource Task2ViewModel}">
    <Window.Resources>
        <viewModels:Task2ViewModel x:Key="Task2ViewModel"/>
    </Window.Resources>
    <Grid>
        <Button x:Name="StartBtn" Command="{Binding Start}" Content="Start" HorizontalAlignment="Left" Margin="199,95,0,0" VerticalAlignment="Top" Width="75"/>

    </Grid>
